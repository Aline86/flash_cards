{% extends 'base.html.twig' %}

{% block title %}Polonais{% endblock %}

{% block body %}
    <div class="form">
        <h1>Polonais</h1>
        <form id="theme_form" class="form">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </form>
    </div>
        <div id="result">
        {% if polonaiss is defined  %}
        {% for polonais in polonaiss %}
            <div id="fr">
                <div class="center">
                    <div id="french">
                        <div>{{ polonais.fr }}</div>
                        <input id="button" type="submit" value="Traduction" />                       
                    </div>
                </div>
                <div class="center">                   
                    <div id="russian">
                        <div>{{ polonais.pl }}</div>
                    </div>
                </div>              
               </div>        
            </div>    
        {% endfor %}
        <div class="pagination">
        {{knp_pagination_render(polonaiss)}}
        </div>
        {% endif %}   
          
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Russe index{% endblock %}

{% block body %}
    <div class="form">
        <h1>Russe</h1>
        <form id="theme_form" class="form">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </form>
    </div>
        <div id="result">
        {% if russes is defined  %}
        {% for russe in russes %}
            <div id="fr">
                <div class="center">
                    <div id="french">
                        <div>{{ russe.fr }}</div>
                        <input id="button" type="submit" value="Traduction" />                       
                    </div>
                </div>
                <div class="center">                   
                    <div id="russian">
                        <div>{{ russe.ru }}</div>
                    </div>
                </div>              
               </div>        
            </div>    
        {% endfor %}
        <div class="pagination">
        {{knp_pagination_render(russes)}}
        </div>
        {% endif %}   
          
{% endblock %}
